<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar"
        android:id="@+id/app_bar">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPink">

            <EditText
                android:id="@+id/et_series_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="casual"
                android:maxLength="1"
                android:hint="Please enter length of series"
                android:inputType="number"
                android:textColor="@color/colorTransparentPink"
                android:theme="@style/CustomInputStyle"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPink">

            <EditText
                android:id="@+id/et_input_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="casual"
                android:hint="Please enter first value"
                android:maxLength="2"
                android:inputType="number"
                android:textColor="@color/colorTransparentPink"
                android:theme="@style/CustomInputStyle"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPink">

            <EditText
                android:id="@+id/et_input_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawablePadding="12dp"
                android:ems="20"
                android:maxLength="2"
                android:hint="Please enter first value"
                android:inputType="number"
                android:fontFamily="casual"
                android:textColor="@color/colorTransparentPink"
                android:theme="@style/CustomInputStyle"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Login Button -->

        <Button
            android:id="@+id/btn_calculate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundbutton"
            android:text="Calculate"
            android:fontFamily="casual"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_solution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="No input yet"
            android:textColor="@color/colorStandardBlack"
            android:textSize="18sp"
            android:layout_marginVertical="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>